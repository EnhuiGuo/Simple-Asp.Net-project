<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/font-awesome-4.6.3/css/font-awesome.min.css" />
</head>
<body>
    <div id="headBar" class="navbar navbar-inverse navbar-fixed-top" style="overflow-wrap:normal">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("牵手广场舞", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="topAddressBarDiv" class="input-group searchBar">
                <input id="topAddressBar" type="text" class="form-control" placeholder="输入地址或邮编号码" />
                <span id="topSearchBtn" class="input-group-btn">
                    <button class="btn btn-secondry" type="button" title="搜索在这个地址附近的寄宿家庭"><i class="fa fa-search"></i></button>
                </span>
            </div>
            <div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/squareDance.common.js")
    @RenderSection("scripts", required: false)

    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyD8GQfhvtg1FACzwYDdr8nFlaOE1SJKf-4&libraries=places&callback=initAutocomplete"></script>
</body>
</html>

